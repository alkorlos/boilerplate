.header {
	position: fixed;
	top: 0;
	left: 0;
	z-index: 50;

	width: 100%;

	background-color: var(--color-default);
}

.header__central {
	min-width: var(--size-layout-min-width);
	max-width: var(--size-layout-max-width);
	padding-right: var(--size-base-padding-horizontal);
	padding-left: var(--size-base-padding-horizontal);
}
