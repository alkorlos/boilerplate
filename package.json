{
  "private": true,
  "name": "bundler",
  "version": "1.0.0",
  "description": "Alkor markup starter kit",
  "main": "main.js",
  "scripts": {
    "start": "node ./node_modules/gulp/bin/gulp.js start",
    "build": "node ./node_modules/gulp/bin/gulp.js build",
    "webpack": "node ./node_modules/webpack/bin/webpack.js --config webpack.config.js --mode development",
    "webpack-production": "node ./node_modules/webpack/bin/webpack.js --config webpack.config.js --mode production",
    "stylelint": "node ./node_modules/stylelint/bin/stylelint.js ./src/styles/**/*.pcss",
    "stylelint:fix": "node ./node_modules/stylelint/bin/stylelint.js ./src/styles/**/*.pcss --fix",
    "eslint": "node ./node_modules/eslint/bin/eslint.js ./src/scripts/**/*.js",
    "eslint:fix": "node ./node_modules/eslint/bin/eslint.js ./src/scripts/**/*.js --fix"
  },
  "author": {
    "name": "Dmitry Statsenko",
    "email": "alkor.sx@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alkorlos/bundler"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "del": "^5.1.0",
    "focus-visible": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-notify": "^3.2.0",
    "gulp-nunjucks": "^5.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pretty-html": "^2.0.10",
    "gulp-rename": "^2.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-collector": "^1.3.3",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgmin": "^3.0.0",
    "gulp-svgstore": "^7.0.1",
    "postcss-import": "^12.0.1",
    "postcss-import-ext-glob": "^1.1.0",
    "postcss-preset-env": "^6.7.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-autofix": "^1.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "stylelint": "^13.7.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.pcss": "npm run stylelint:fix",
    "*.js": "npm run eslint:fix"
  }
}
